<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<title>Online Shop - Details</title>
<meta http-equiv="Content-Type" content="text/html; charset=windows-1252" />
<link rel="stylesheet" type="text/css" href="style.css" />
<link rel="stylesheet" href="lightbox.css" type="text/css" media="screen" />
<script src="js/prototype.js" type="text/javascript"></script>
<script src="js/scriptaculous.js?load=effects" type="text/javascript"></script>
<script src="js/lightbox.js" type="text/javascript"></script>
<script type="text/javascript" src="js/java.js"></script>
</head>
<body>
<div id="wrap">
  <div class="header">
    <div class="logo"><img src="images/logo.gif" alt="" border="0" /></div>
    <div id="menu">
      <ul>
        <li><a href="/home">home</a></li>
        <li><a href="/about">about us</a></li>
        <li><a href="/new">new products</a></li>
        <li><a href="/specials">specials</a></li>
        <li><a href="/register">register</a></li>
        <li><a href="/myaccount">Sign in</a></li>
      </ul>
    </div>
  </div>
  <div class="center_content">
    <div class="left_content">
      <div class="crumb_nav"> <a href="/home">home</a> &gt;&gt; <%=product.productname%> </div>
      <div class="title"><%=product.productname%></div>
      <div class="feat_prod_box_details">
        <div class="prod_img"><img src="images/<%=product.source%>" alt="" border="0" /> <br />
          <br />
        </div>
        <div class="prod_det_box">
          <div class="box_top"></div>
          <div class="box_center">
            <div class="prod_title">Details</div>
            <p class="details"><%=product.productdetails%></p>
            <div class="price"><strong>PRICE:</strong> <span class="red"><%=product.price%> Tk</span></div>
            <a href="/order/<%=product.productid%>" class="more"><img src="images/order_now.gif" alt="" border="0" /></a>
            <div class="clear"></div>
          </div>
          <div class="box_bottom"></div>
        </div>
        <div class="clear"></div>
      </div>
      <div class="title">Related Products</div>
      <div class="new_products">
        <% for(var i = 0; i < products.length; i++) {%>
        <div class="new_prod_box"> <a href="<%=products[i].productid%>"><%=products[i].productname%></a>
          <div class="new_prod_bg"> <span class="new_icon"><img src="<%if(products[i].discount){%>images/promo_icon.gif<%} else if(products[i].spetial){%>images/spetial_icon.gif<%}%>" alt="" /></span> <a href="<%=products[i].productid%>"><img src="thumb/<%=products[i].source%>" alt="" class="thumb" border="0" /></a> </div>
        </div>
        <%}%>
      </div>
      <div class="clear"></div>
    </div>
    <!--end of left content-->
    <div class="right_content">
      <div class="cart">
        <div class="title"><span class="title_icon"><img src="images/cart.gif" alt="" /></span>My cart</div>
        <a href="/cart" class="view_cart">view cart</a> </div>
      <div class="title">About Our Shop</div>
      <div class="about">
        <p> <img src="images/about.gif" alt="" class="right" /> Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud. </p>
      </div>
      <div class="right_box">
        <div class="title">Promotions</div>
        <% for(var i = 0; i < promotion.length; i++) {%>
        <div class="new_prod_box"> <a href="<%=promotion[i].productid%>"><%=promotion[i].productname%></a>
          <div class="new_prod_bg"> <span class="new_icon"><img src="images/promo_icon.gif" alt="" /></span> <a href="<%=promotion[i].productid%>"><img src="thumb/<%=promotion[i].source%>" alt="" class="thumb" border="0" /></a> </div>
        </div>
        <%}%>
      </div>
      <div class="right_box">
        <div class="title">Categories</div>
        <ul class="list">
          <%for(var i = 0; i < categories.length; i++){%>
          <li><a href="/category/<%=categories[i]%>"><%=categories[i]%></a></li>
          <%}%>
        </ul>
      </div>
    </div>
    <!--end of right content-->
    <div class="clear"></div>
  </div>
  <!--end of center content-->
  <div class="footer">
    <div class="left_footer"><img src="images/footer_logo.gif" alt="" /></div>
    <div class="right_footer"> <a href="home">home</a> <a href="about">about us</a> <a href="about">services</a> <a href="about">privacy policy</a> <a href="contact">contact us</a> </div>
  </div>
</div>
</body>
<script type="text/javascript">

var tabber1 = new Yetii({
id: 'demo'
});

</script>
</html>
